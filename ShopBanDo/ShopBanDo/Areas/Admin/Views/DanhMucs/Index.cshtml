@model IEnumerable<ShopBanDo.Areas.Admin.Models.Framework.DanhMuc>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="card-title">
    <h4 class="mb-0">Quản lý danh mục</h4>
</div>

<p>
    @Html.ActionLink("Thêm Mới", "Create",null,new { @class="btn btn-primary"})
</p>
<table id="example" class="table table-bordered table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TenLoai)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TenVietTat)
            </th>
            <th></th>
        </tr>
    </thead>
   
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TenLoai)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TenVietTat)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.id }) |
                    @Html.ActionLink("Thông Tin", "Details", new { id = item.id }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.id })
                </td>
            </tr>
        }
    </tbody>
  

</table>

@section Scripts{
    <script src="~/Areas/Admin/Assets/plugins/datatable/js/jquery.dataTables.min.js"></script>
    <script>

        $(document).ready(function () {
            //Default data table
            $('#example').DataTable();
            var table = $('#example2').DataTable({
                lengthChange: false,
                buttons: ['copy', 'excel', 'pdf', 'print', 'colvis']
            });
            table.buttons().container().appendTo('#example2_wrapper .col-md-6:eq(0)');
        });

    </script>
}
